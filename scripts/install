#!/bin/bash

SYMLINKS=**/*.symlink
TEMPLATES=**/*.template

for f in $SYMLINKS
do
  target="$PWD/$f"
  filename=$(basename $f)
  dest="$HOME/.${filename%.*}"
  echo "Installing $dest"
  ln -sfn $target $dest
done

for f in $TEMPLATES
do
  target="$PWD/$f"
  filename=$(basename $f)
  dest="$HOME/.${filename%.*}"
  echo "Installing $dest"
  cp -i $target $dest ||:
done
