# Global snippets

# (c) holds no legal value ;)
snippet c)
	Copyright `&enc[:2] == "utf" ? "Â©" : "(c)"` `strftime("%Y")` ${1:`g:snips_author`}. All Rights Reserved.${0}
snippet date
	`strftime("%Y-%m-%d")`
snippet ddate
	`strftime("%B %d, %Y")`
snippet sd
	style="display:block;border:none;"
snippet sp
	<span style="${1}">${0}</span>
snippet spc
	<span class="${1}">${0}</span>
snippet tar
	target="_blank"
snippet ajax
	\$.ajax({
		url: '${1}',
		beforeSend: function() {
			console.log('before');
			${2}
		},
		success: function(data) {
			console.log('success');
			${3}
		},
		error: function(data) {
			console.log('error');
			${0}
		}
	});
snippet log
	var test = ${1};
	console.log(test);
snippet ph
	<?= ${0} ?>
snippet php
	<?php ${0} ?>
snippet email
