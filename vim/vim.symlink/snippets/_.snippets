snippet tr
	<tr>
		${0}
	</tr>
snippet td
	<td>
		${0}
	</td>
snippet a
	<a href="${1}">${0}</a>
snippet br
	<br />
snippet divc
	<div class="${1:name}">
		${0}
	</div>
snippet tac
	text-align: center;
snippet oh
	overflow: hidden;
snippet div
	<div${1}>${0}</div>
snippet divi
	<div id="${1:name}">
		${0}
	</div> <!-- #$1 -->
snippet ttu
	text-transform: uppercase;
snippet tdn
	text-decoration: none;
snippet ti
	text-indent: -99999em;
snippet fll
	float: left;
snippet lstn
	list-style-type: none;
snippet db
	display: block;
snippet dn
	display: none;
snippet h3
	<h3>${0}</h3>
snippet h2
	<h2>${0}</h2>
snippet flr
	float: right;
snippet fwb
	font-weight: bold;
snippet bgc
	background-color: #${0};
snippet por
	position: relative;
snippet h4
	<h4>${0}</h4>
snippet hr
	<hr />
snippet errors
	error_reporting(E_ALL);
	ini_set('display_errors', TRUE);
	ini_set('display_startup_errors', TRUE);
snippet dv
	$('.defaultValue').each(function() {
		var default_value = this.value;
		$(this).focus(function(){ if(this.value == default_value) { this.value = ''; } });
		$(this).blur(function(){ if(this.value == '') { this.value = default_value; } });
	});
snippet robots
	User-agent: *
	Disallow: /
snippet nav
	<nav>
		${0}
	</nav>
snippet auth
	AuthType Basic
	AuthName "My Protected Area"
	AuthUserFile ${1:/path/to/.htpasswd}
	Require valid-user
snippet scrollto
	$('html,body').animate({ scrollTop: $('${1}').offset().top - ${2:15} }, ${0:500});
snippet border
	border: 1px solid red;
snippet nbsp
	<span style="height: 0; line-height: 0;">&nbsp;</span>
snippet 301
	[R=301,NC,L]${0}
snippet =
        <%= ${1} %>${0}
snippet -
        <% ${1} %>${0}
