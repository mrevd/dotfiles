	<html xmlns:v="urn:schemas-microsoft-com:vml">
	<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title></title>
	</head>
	<body>
	<style type="text/css">
		html { background-color: $1; -webkit-text-size-adjust: none; /* Prevent font scaling in landscape */ -ms-text-size-adjust: none; /* Force Hotmail to display emails at full width */ }
		body { margin:0; padding: 0; width:100% !important; } .ReadMsgBody{ width:100%; } .ExternalClass{ width:100%; }
	</style>
	<div marginwidth="0" marginheight="0" style="margin: 0; padding: 0; width: 100% !important; background-color: $1;">
		<center>
		<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 0; padding: 0; width: 100% !important;">
			<tr>
				<td style="background-color: ${1:#FFFFFF};">
					${0}
				</td>
			</tr>
		</table>
		</center>
	</div>
	</body>
	</html>
