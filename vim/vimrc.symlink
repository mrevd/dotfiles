" FileType {{{
  if has("autocmd")
    " Drupal *.module and *.install files.
    augroup module
      autocmd BufRead,BufNewFile *.module set filetype=php
      autocmd BufRead,BufNewFile *.install set filetype=php
      autocmd BufRead,BufNewFile *.test set filetype=php
      autocmd BufRead,BufNewFile *.inc set filetype=php
      autocmd BufRead,BufNewFile *.profile set filetype=php
      autocmd BufRead,BufNewFile *.view set filetype=php
      autocmd BufRead,BufNewFile *.theme set filetype=php
    augroup END

    augroup conf
      autocmd BufRead,BufNewFile *.symlink set filetype=zsh
    augroup END

    augroup sh
      autocmd BufRead,BufNewFile .profile set filetype=sh
    augroup END

    augroup crontab
      set nowritebackup
    augroup end

    augroup apache
      autocmd BufRead,BufNewFile httpd-vhosts.conf set filetype=apache
    augroup end

    augroup readme
      autocmd BufNewFile,BufReadPost *.md set spell
    augroup end

    augroup dots
      autocmd BufRead,BufNewFile vimrc.symlink set filetype=vim
    augroup end
  endif
"}}}

