[user]
  name  = Matt Ryan
  email = m@mrevd.me
[github]
  user = mrevd
[credential]
  helper = osxkeychain
[color]
  diff   = auto
  branch = auto
  status = auto
  ui     = true
[alias]
  diff    = diff --ignore-space-change
  lol     = log --graph --decorate --abbrev-commit
  lola    = log --graph --decorate --abbrev-commit --all
  ls      = ls-files
[diff]
  tool = opendiff
[difftool]
  prompt = false
[mergetool]
  prompt = false
  keepBackup = false
[merge]
  tool = fugitive
[apply]
  whitespace = fix
[core]
  editor     = vim
  whitespace = space-before-tab,tab-in-indent,trailing-space
  excludesfile = ~/.gitignore_global
[help]
  autocorrect = 1
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
